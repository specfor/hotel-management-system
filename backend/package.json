{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "migrate": "ts-node ./scripts/migrate.ts",
    "db:drop": "ts-node ./scripts/dropDatabase.ts",
    "clean-install": "rm -rf node_modules package-lock.json && npm i",
    "dev": "cross-env NODE_ENV=development ts-node ./src/index.ts",
    "dev:hot": "nodemon --exec \"npm run dev\" --watch ./src --ext .ts",
    "build:docker": "tsc --build tsconfig.prod.json",
    "lint": "eslint . --config eslint.config.ts",
    "start": "node -r ./dist/config.js ./dist",
    "test": "cross-env NODE_ENV=development vitest",
    "type-check": "tsc --noEmit"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "inserturlparams": "^2.0.5",
    "jet-env": "^1.1.4",
    "jet-logger": "^2.0.1",
    "jet-paths": "^1.1.0",
    "jet-validators": "^1.4.3",
    "joi": "^18.0.1",
    "jsonfile": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@swc/core": "^1.13.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/find": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/joi": "^17.2.2",
    "@types/jsonfile": "^6.1.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "eslint-plugin-n": "^17.23.1",
    "find": "^0.3.0",
    "fs-extra": "^11.3.2",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4"
  }
}
